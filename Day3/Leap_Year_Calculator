input_year=int(input('Enter a year that you would like to check: '))

if input_year%4==0:
    if input_year%400==0:
        print(f'A year {input_year} is a Leap Year')
    elif input_year%100==0:
        print(f'A year {input_year} is not a Leap Year')
    else:
        print(f'A year {input_year} is a Leap Year')
else:
    print(f'A year {input_year} is not a Leap Year')
